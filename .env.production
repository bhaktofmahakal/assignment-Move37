# Production Environment Configuration
NODE_ENV=production

# Database
DATABASE_URL="postgresql://polling_user:polling_password@postgres:5432/polling_db"

# Security
JWT_SECRET="your-super-secure-jwt-secret-key-for-production"

# Server
PORT=3000
LOG_LEVEL=info

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="https://your-domain.com,https://api.your-domain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=0  # 0 = auto-detect CPU cores

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache
REDIS_URL="redis://redis:6379"
ENABLE_CACHE=true
CACHE_TTL=300

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_LIMIT=1000

# File Upload
MAX_FILE_SIZE=10485760  # 10MB

# Session
SESSION_SECRET="your-session-secret-key"
SESSION_MAX_AGE=604800000  # 7 days

# Email (if needed for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Sentry (for error tracking)
SENTRY_DSN="your-sentry-dsn-url"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"